<%= simple_form_for [@post, @post.comments.build] do |f| %>
  <div>
    <div>
      <%= f.input :name, input_html: { class: 'w-full rounded' }, label_html: { class: 'block'} %>
    </div>
    <div class="my-4">
      <%= f.input :comment, input_html: { class: 'w-full rounded' }, label_html: { class: 'block'} %>
    </div>
  </div>
  <div class="flex justify-end">
    <%= f.button :submit, class: 'bg-blue-500 text-white rounded px-4 py-2 flex' %>
  </div>
<% end %>
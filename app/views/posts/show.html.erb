<% content_for :page_title, @post.title %>

<div class="bg-white rounded p-8 drop-shadow">
  <section id="post">
    <div class="flex gap-4 justify-end">
      <%= link_to "Edit", edit_post_path(@post), class: 'bg-gray-500 py-2 px-6 rounded text-white hover:bg-gray-400' %>
      <%= button_to 'Delete post', post_path(@post), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: 'bg-red-500 py-2 px-6 rounded text-white hover:bg-red-400' %>
    </div>
    <div class="my-10 capitalize">
      <%= @post.content %>
    </div>
  </section>
  <section id="comments">
    <strong class="text-2xl"><%= @post.comments.count %> Comments</strong>
    <div class="my-4">
      <%= render @post.comments %>
    </div>
    <div>
      <h3 class="text-2xl my-4  font-light">Leave a reply</h3>
      <%= render 'comments/form' %>
    </div>
  </section>
</div>
